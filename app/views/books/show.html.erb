<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @book.title %>
</p>

<p>
  <strong>Number of pages:</strong>
  <%= @book.number_of_pages %>
</p>
<p>
  <strong>Detail:</strong>
  <%= @book.detail %>
</p>
<%= image_tag @book.image, style:'width: 300px; height: 300px;border-radius:50%;-moz-border-radius:50%;-webkit-border-radius:50%;' %>
<br>
<h2>Review From</h2>
  <%= form_with(model: @book_review, local: true) do |form| %>
    <%= form.hidden_field :user_id, :value =>  @book.id %>
    <%= form.hidden_field :book_id, :value => current_user.id %>
  <div class="field">
    <%= form.text_area :review %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
<%= link_to 'Edit', edit_book_path(@book) %> |
<%= link_to 'Back', books_path %>
